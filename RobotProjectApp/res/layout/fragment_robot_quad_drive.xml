<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/robot_quad_drive_distance_to_drive"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:hint="@string/robot_quad_drive_distance_to_drive_hint"
            android:imeOptions="actionDone"
            android:inputType="number|numberDecimal" />

        <Spinner
            android:id="@+id/robot_quad_drive_speed_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/robot_quad_drive_buttonStart"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="@string/robot_quad_drive_start" />
    </LinearLayout>

    <TextView
        android:id="@+id/robot_quad_drive_textLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:scrollbars="none"
        android:textSize="12sp" >

        <requestFocus />
    </TextView>

</LinearLayout>